<header class='navbar navbar-fixed-top bg-main-color'>
  <div class='container'>
    <%= link_to "Tabetter", root_path, class: 'header-logo' %>
    <nav>
      <ul class='nav navbar-nav navbar-right'>
        <li><%= link_to "Home", root_path, class: "header-nav" %></li>
        <li><%= link_to "About", about_path, class: "header-nav" %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", "#", class: "header-nav" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle header-nav" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu custom-dropdown">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, class: "header-nav" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>